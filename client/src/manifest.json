{
  "name": "niconicoment",
  "description": "Participant can send message, and presenter show the message on browser like niconico video.",
  "version": "1.0.0",
  "manifest_version": 2,
  "icons": {
    "128": "icons/icon_128.png"
  },
  "browser_action": {},
  "background": {
    "page": "background.html"
  },
  "permissions": [
    "tabs",
    "activeTab"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}